// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id
  name            String
  email           String   @unique
  password        String?  // Hashed password for credentials login
  gender          String?
  phone           String?
  college         String?
  year            String?
  accommodation   String?
  paymentId       String?
  paymentScreenshot String? // URL or Base64 of payment proof
  totalPaid       Int       @default(0) // 399 or 999 usually

  paymentVerified Boolean  @default(false)
  profileCompleted Boolean @default(false)

  emailVerified       Boolean  @default(false)
  emailVerificationToken String?
  
  // CA Fields
  role            String   @default("USER") // USER or CA
  referralCode    String?  @unique
  referredBy      String?
  caCoins         Int      @default(0)
  
  // Social Rewards
  taskInsta       Boolean  @default(false)
  taskLinkedIn    Boolean  @default(false)
  taskX           Boolean  @default(false)
  taskFacebook    Boolean  @default(false)
  taskCart        Boolean  @default(false)
  taskCart5       Boolean  @default(false)
  taskCart10      Boolean  @default(false)

  createdAt       DateTime @default(now())

  // New Cart & Order System
  cart            Cart?
  orders          Order[]
  coinHistory     CoinHistory[]
  
  // Team System
  teams           Team[]    @relation("TeamMembers")
  ledTeams        Team[]    @relation("TeamLeader")
}

model Cart {
  id        String     @id @default(cuid())
  userId    String     @unique
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  eventSlug String
  eventName String
  price     Int
  createdAt DateTime @default(now())

  @@unique([cartId, eventSlug]) // Prevent duplicate items in cart
}

model Order {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id])
  items         OrderItem[]
  totalAmount   Int
  status        String      @default("PENDING") // PENDING, PAID, FAILED
  paymentId     String?     // External Payment ID (Razorpay etc) or UTR
  paymentScreenshot String? // Base64 or URL of payment proof
  passType      String?     // 'basic' (99) or 'premium' (399) or null
  securityDeposit Int       @default(0) // Refundable deposit
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  eventSlug String
  eventName String
  price     Int
}

model CoinHistory {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Int      // Positive for earning, Negative for spending
  reason    String   // e.g. "Instagram Task", "Referral Bonus", "Event Registration"
  createdAt DateTime @default(now())
}

model Team {
  id        String   @id @default(cuid())
  name      String
  code      String   @unique // 6 character random code
  eventSlug String
  
  leaderId  String
  leader    User     @relation("TeamLeader", fields: [leaderId], references: [id])
  
  members   User[]   @relation("TeamMembers")
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([eventSlug, leaderId]) // User can only lead one team per event
}
